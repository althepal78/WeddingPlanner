@model List<Wedding>
@if(Model == null)
{
    <h1>Nada Here</h1>
}
else
{

    <h1>Welcome To The Dash Board of Weddings</h1>
    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>Wedding Name</th>
                <th>Wedding Date</th>
                <th>Number of Guest</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Wedding wed in @Model)
            {
                <tr>
                    <td><a asp-action="ShowWed" asp-controller="Wedding" asp-route-id="@wed.WedId"> @wed.WedOne and @wed.WedTwo </a>  </td>
                    <td>@wed.WedDate</td>
                    <td>@wed.RSVPs.Count</td>

                    @if(@wed.Creator.UserId == @ViewBag.User.UserId)
                    {
                        <td> <a asp-action="Delete"
                                asp-controller="Wedding"
                                asp-route-wedId="@wed.WedId">Cancel Wedding</a> </td>
                    }
                    else
                    {
                        if(@wed.RSVPs.Any(u => u.UserID == ViewBag.User.UserId))
                        {
                            <td> <a asp-action="NotGoing"
                                    asp-controller="Wedding"
                                    asp-route-wedId="@wed.WedId"
                                    asp-route-userId="@ViewBag.User.UserId">Not Going</a>
                           </td>
                        }
                        else
                        {
                                 <td> <a asp-action="Going"
                                    asp-controller="Wedding"
                                    asp-route-wedId="@wed.WedId"
                                    asp-route-userId="@ViewBag.User.UserId">Going</a>
                           </td>
                        }
                    }

                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="AddWedding" asp-controller="Wedding">Add Wedding</a>